module NumerosBuscaminas (
  input logic [9:0] x, // Coordenada X de la casilla
  input logic [9:0] y, // Coordenada Y de la casilla
  input logic [2:0] numero, // Número del 1 al 8
  output logic [7:0] red,
  output logic [7:0] green,
  output logic [7:0] blue
);

  // Tamaño del tablero y colores
  parameter NUM_COLUMNS = 8;
  parameter NUM_ROWS = 8;
  logic [7:0] background_color = 8'b11111111; // Blanco
  logic [7:0] text_color = 8'b00000000; // Negro
  logic [7:0] fill_color = 8'b10101010; // Gris en formato binario

  // Tamaño de la pantalla
  parameter SCREEN_WIDTH = 640;
  parameter SCREEN_HEIGHT = 480;

  // Tamaño de cada casilla en el tablero
  parameter CELL_WIDTH = SCREEN_WIDTH / NUM_COLUMNS;
  parameter CELL_HEIGHT = SCREEN_HEIGHT / NUM_ROWS;

  // Calcula las coordenadas relativas al tablero centrado
  int rel_x;
  int rel_y;

  always_ff @(posedge x or posedge y) begin
    // Calcula las coordenadas relativas al tablero centrado
    rel_x = x - (SCREEN_WIDTH - (NUM_COLUMNS * CELL_WIDTH)) / 2;
    rel_y = y - (SCREEN_HEIGHT - (NUM_ROWS * CELL_HEIGHT)) / 2;

    // Verifica si la casilla tiene un número válido para mostrar
    if (numero >= 1 && numero <= 8) begin
      red <= fill_color; // Fondo gris
      green <= fill_color;
      blue <= fill_color;

      // Dibuja el número en el centro de la casilla
      case (numero)
        1: begin
          // Dibuja el número 1 (puedes personalizar su apariencia)
          // Por ejemplo, dibujar una línea vertical en el centro
          // de la casilla para representar el número 1.
          // Ajusta la lógica para dibujar el número según tu preferencia.
          // Ejemplo para dibujar una línea vertical:
          // red <= text_color;
          // green <= text_color;
          // blue <= text_color;
          // Aquí dibujamos una línea vertical en el centro de la casilla:
          if (rel_x >= CELL_WIDTH / 2 - 2 && rel_x <= CELL_WIDTH / 2 + 2)
            red <= text_color;
          end

        2: begin
          // Dibuja el número 2 (puedes personalizar su apariencia)
          // Por ejemplo, dibujar el número "2" en el centro de la casilla.
          // Ajusta la lógica para dibujar el número según tu preferencia.
          // Ejemplo para dibujar el número "2":
          // red <= text_color;
          // green <= text_color;
          // blue <= text_color;
          // Aquí dibujamos el número "2" en el centro de la casilla.
          // Puedes personalizar su apariencia como desees.
          red <= text_color;
          green <= text_color;
          blue <= text_color;
          // Ejemplo para dibujar el número "2":
          // Si está en la parte superior de la casilla
          if (rel_y <= CELL_HEIGHT / 2 + 2) begin
            // Dibuja una línea horizontal en la parte superior
            if (rel_x >= CELL_WIDTH / 4 - 2 && rel_x <= 3 * CELL_WIDTH / 4 + 2)
              red <= text_color;
          end else begin
            // Dibuja una línea horizontal en la parte inferior
            if (rel_x >= CELL_WIDTH / 4 - 2 && rel_x <= 3 * CELL_WIDTH / 4 + 2)
              red <= text_color;
          end
          // Dibuja una línea vertical en el centro
          if (rel_x >= CELL_WIDTH / 2 - 2 && rel_x <= CELL_WIDTH / 2 + 2)
            red <= text_color;
          end

        // Repite el proceso para los demás números (3 al 8) ajustando la lógica según sea necesario.
        // ...

        default: begin
          // Si el número no es válido, muestra el fondo gris en su lugar.
          red <= fill_color;
          green <= fill_color;
          blue <= fill_color;
        end
      endcase
    end else begin
      // Si no hay número válido, muestra el fondo blanco.
      red <= background_color;
      green <= background_color;
      blue <= background_color;
    end
  end
endmodule
